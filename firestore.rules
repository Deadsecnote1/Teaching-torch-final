rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Anyone can READ resources, grades, subjects, and settings (Students)
    match /resources/{document=**} {
      allow read: if true;
    }
    match /grades/{document=**} {
      allow read: if true;
    }
    match /subjects/{document=**} {
      allow read: if true;
    }
    match /settings/{document=**} {
      allow read: if true;
    }

    // 2. Only LOGGED IN ADMINS can WRITE (Create, Update, Delete)
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
